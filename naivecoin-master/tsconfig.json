{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "checkJs": false,
    "module": "commonjs",
    "target": "ES2015",
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/main.ts",
    "src/block.ts",
    "src/p2p.ts",
    "src/util.ts",
    "src/transaction.ts",
    "src/wallet.ts",
    "src/transactionPool.ts"
  ],
  "exclude": [
    "node_modules", "build", "lib/*.js", "lib/*.jsx"
  ]
}
